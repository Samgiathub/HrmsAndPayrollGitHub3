@model HrmsPayrollNewApp.DataAccessLayer.Data.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" required />
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" step="0.01" class="form-control" id="Price" name="Price" value="@Model.Price" required />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
