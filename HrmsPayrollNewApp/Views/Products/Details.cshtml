@model HrmsPayrollNewApp.DataAccessLayer.Data.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header">
            <h4>@Model.ProductName</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Id</dt>
                <dd class="col-sm-10">@Model.Id</dd>

                <dt class="col-sm-2">Product Name</dt>
                <dd class="col-sm-10">@Model.ProductName</dd>

                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price</dd>               

                <!-- Add more product details here as needed -->
            </dl>
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
